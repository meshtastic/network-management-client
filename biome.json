{
  "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "ignore": [
      "src/bindings/index.ts"
    ]
  },
  "organizeImports": {
    "enabled": false
  },
  "linter": {
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "ignore": [
      "src/bindings/index.ts",
      "src/locales/**/*"
    ],
    "enabled": true,
    "rules": {
      "all": true,
      "complexity": {
        "useSimplifiedLogicExpression": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "off"
      },
      "performance": {
        "noAccumulatingSpread": "off"
      },
      "suspicious": {
        "noDoubleEquals": "warn"
      },
      "style": {
        "noImplicitBoolean": "off"
      }
    }
  }
}